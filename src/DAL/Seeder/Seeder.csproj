<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\..\build\deps.csproj.props" />
    
    <Target Name="CopySharedSettingsOnBuild" AfterTargets="Build" Condition="'$(AssemblyName)' != 'Tayra.Connectors.App'">
    <ItemGroup>  
        <SharedSettingsJson Include="$(ProjectDir)../../../build/sharedSettings.json" />
    </ItemGroup>
    <Copy SourceFiles="@(SharedSettingsJson)" DestinationFolder="$(OutDir)" />
    </Target>
    
    <Target Name="CopySharedSettingsOnPublish" AfterTargets="Publish" Condition="'$(AssemblyName)' != 'Tayra.Connectors.App'">
    <ItemGroup>  
        <SharedSettingsJson Include="$(ProjectDir)../../../build/sharedSettings.json" />
    </ItemGroup>
    <Copy SourceFiles="@(SharedSettingsJson)" DestinationFolder="$(PublishDir)" />
    </Target>
    
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>Tayra.Models.Seeder</RootNamespace>
    <AssemblyName>Tayra.Models.Seeder</AssemblyName>
  </PropertyGroup>  
        
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="$(DotnetPackagesVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="$(DotnetPackagesVersion)" />
  </ItemGroup>
    
  <ItemGroup>
    <ProjectReference Include="..\OrganizationModel\OrganizationModel.csproj" />
    <ProjectReference Include="..\CatalogModel\CatalogModel.csproj" />
    <ProjectReference Include="..\..\Services\Services.csproj" />
    <ProjectReference Include="..\..\Common\Common.csproj" />
    <ProjectReference Include="..\..\Connectors\Connectors.Common\Connectors.Common.csproj" />
  </ItemGroup>
    
  <ItemGroup>
    <Content Include="appsettings.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>
</Project>
